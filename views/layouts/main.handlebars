<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Fund My Project!</title>
    <link rel="stylesheet" href="/css/jass.css">
    <link rel="stylesheet" href="/css/style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
        crossorigin="anonymous">
</head>

<body>
    <div class="flex-column justify-space-around">
        <header class="d-flex justify-content-center align-items-center p-2">
            <nav class="w-100">
                <div class="navbar navbar-expand-lg bg-body-tertiary">
                    <div class="container-fluid">
                        <a class="navbar-brand" href="/">üßëüèΩ‚Äçüç≥ DishDiscovery!</a>
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                            data-bs-target="#navbarText" aria-controls="navbarText" aria-expanded="false"
                            aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="collapse navbar-collapse" id="navbarText">
                            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                                <li class="nav-item">
                                    <a class="nav-link active" aria-current="page" href="/">Home</a>
                                </li>
                                <!-- Conditionally render login or logout links -->
                                {{#if logged_in}}
                                <li class="nav-item">
                                    <a class="nav-link" href="/profile">My Profile</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" id="logout">Logout</a>
                                </li>
                                {{else}}
                                <li class="nav-item">
                                    <a class="nav-link" href="/login">Login</a>
                                </li>
                                {{/if}}
                            </ul>
                            <!-- Search bar added here with centering -->
                            <div class="container">
                                  <div class="row justify-content-center">
                                      <div class="col-md-6">
                                          <div class="topnav d-flex justify-content-center align-items-center">
                                              <input id="recipeSearchInput" class="form-control me-2" type="text" placeholder="Search" aria-label="Search">
                                              <button id="searchButton" class="btn btn-outline-success" onclick="searchRecipes()">Search</button>
                                          </div>
                                      </div>
                                  </div>
                              </div>
                            <a class="navbar-text nav-link" href="/login">
                                Sign up for DishDiscovery+
                            </a>
                        </div>
                    </div>
                </div>
            </nav>
        </header>
        <main class="container container-fluid mt-5">
            <!-- Render the sub layout -->
            {{{ body }}}
        </main>
        <footer>

        </footer>
    </div>

    <!-- Render script for logged-in users only -->
    {{#if logged_in}}
    <script src="/js/logout.js"></script>
    {{/if}}
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
        integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"
        integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+"
        crossorigin="anonymous"></script>
        
    <!-- search bar functionality -->
    <script>
        function searchRecipes() {
            // Get the value from the search input
            const searchQuery = document.getElementById('recipeSearchInput').value;

            // Make a request to your backend with the search query
            // Replace '/api/search' with the actual endpoint for searching recipes on your backend
            fetch(`/api/search?query=${encodeURIComponent(searchQuery)}`)
                .then(response => response.json())
                .then(data => {
                    // Process the search results (data) here
                    console.log('Search results:', data);
                })
                .catch(error => {
                    console.error('Error during search:', error);
                });
        }
    </script>
</body>

</html>