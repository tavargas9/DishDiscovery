<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Your Profile:</h3>

    <!-- Display user details -->
    <p>Name: {{name}}</p>
    <p>Email: {{email}}</p>
    <!-- Add more profile details as needed -->

    <!-- Add a section for updating user profile information if required -->

  </div>

  <div class="col-md-6">
    <!-- Display Favorites -->
    {{#if names.length}}
      <div class="project-list mt-4">
        <h4>Your Favorites:</h4>

        {{#each names as |name|}}
          <div class="row mb-2">
            <div class="col-md-8">
              <h5><a href="/dish/tasty/{{name.id}}" class="btn btn-primary">{{name.name}}</a></h5>
            </div>
          </div>
        {{/each}}
      </div>
    {{else}}
      <p>No favorites found. Save a recipe to get started!</p>
    {{/if}}
  </div>
</div>

<script src="./js/profile.js"></script>